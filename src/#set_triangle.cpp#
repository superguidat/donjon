

void		set_triangle(t_zposition	*pos,
			     t_bunny_color	*colo)
{
  glBegin(GL_TRIANGLES);
  for (int i = 0; i < 3; i ++)
    {
      glColor4f((float)(colo[i].argb[0] / 255.0f),
		(float)(colo[i].argb[1] / 255.0f),
		(float)(colo[i].argb[2] / 255.0f),
		(float)(colo[i].argb[3] / 255.0f)); glVertex3f((float)pos[i].x,
							       (float)pos[i].y,
							       (float)pos[i].z);
    }
}